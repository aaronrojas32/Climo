<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.Climo" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Fuente variable -->
        <item name="fontFamily">@font/parkinsans_regular</item>

        <!-- Colores principales -->
        <item name="colorPrimary">@color/text_main</item>
        <item name="colorPrimaryVariant">@color/text_700</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/main_300</item>
        <item name="colorSecondaryVariant">@color/main_400</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Barra de estado -->
        <item name="android:statusBarColor">@color/main_500</item>

        <!-- Fondo -->
        <item name="android:colorBackground">@color/background_50</item>
        <item name="colorOnBackground">@color/background100</item>

    </style>

    <style name="Theme.Climo" parent="Base.Theme.Climo" />
</resources>